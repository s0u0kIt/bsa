<IfModule mod_rewrite.c>
  # Activate rewrite engine
  RewriteEngine On

  # Ignore static resources (CSS, JS, images, fonts, etc.)
  RewriteCond %{REQUEST_URI} !\.(css|gif|ico|jpg|js|png|swf|txt|svg|woff|ttf|eot)$ [NC]

  # Ignore requests for the public/ directory
  RewriteCond %{REQUEST_URI} !^/public/ [NC]

  # Redirect everything to index.php, except static resources and the public/ directory
  RewriteCond %{REQUEST_URI} !^/index\.php [NC]
  RewriteRule ^ index.php [L]

  # Remove "index.php" from URLs
  RewriteCond %{THE_REQUEST} /index\.php [NC]
  RewriteRule ^index\.php(.*)$ /$1 [L,R=301]
</IfModule>